<resources>

    <style name="RN_ActionSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/react_native_action_primaryColor</item>
        <item name="colorPrimaryDark">@color/react_native_action_primaryColorDark</item>
    </style>

    <style name="RN_ActionSheet.Option">
        <item name="android:textColor">@color/react_native_action_sheet_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/react_native_action_sheet_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RN_ActionSheet.Header">
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textColor">@color/react_native_action_sheet_gray</item>
    </style>

    <style name="RN_ActionSheet.Header.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/react_native_action_sheet_gray</item>
    </style>

    <style name="RN_ActionSheet.Option.Cancel" parent="RN_ActionSheet.Option" />

    <style name="RN_ActionSheet.Divider">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/react_native_action_sheet_divider</item>
    </style>

    style="@style/Shadow"
    android:background="@color/black_alpha_20"
</resources>